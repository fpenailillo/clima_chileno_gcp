# Archivo de ejemplo para variables de Terraform
# Copiar este archivo a terraform.tfvars y completar con valores reales

# ID del proyecto de Google Cloud Platform
# Ejemplo: "mi-proyecto-clima-123456"
id_proyecto = "tu-proyecto-gcp"

# Región de GCP donde desplegar los recursos
# Opciones comunes: "us-central1", "us-east1", "southamerica-east1"
region = "us-central1"

# Zona horaria para Cloud Scheduler
# Formato: IANA Time Zone Database
# Ejemplo: "America/Santiago", "America/New_York", "Europe/London"
zona_horaria = "America/Santiago"

# Frecuencia de extracción en formato cron
# Formato: "minuto hora día_mes mes día_semana"
# Ejemplos:
#   "0 * * * *"    - Cada hora en punto
#   "*/30 * * * *" - Cada 30 minutos
#   "0 */2 * * *"  - Cada 2 horas
#   "0 6,12,18 * * *" - A las 6am, 12pm y 6pm
frecuencia_extraccion = "0 * * * *"
